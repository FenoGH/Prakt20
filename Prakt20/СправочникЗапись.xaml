<Window x:Class="Prakt20.СправочникЗапись"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prakt20"
        mc:Ignorable="d"
        Title="СправочникЗапись" Height="210" Width="200" ResizeMode="NoResize">
    
    <StackPanel>
        <Label>Наименование детали</Label>
        <TextBox x:Name="Name" HorizontalAlignment="Left"  TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="30"/>
        <Label>Цена</Label>
        <TextBox x:Name="Price" HorizontalAlignment="Left"  TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="30"/>
        <Button x:Name="Добавить" Content="Добавить" Click="Добавить_Click" Height="30"></Button>
        <Button x:Name="Отмена" Content="Отмена" Click="Отмена_Click" Height="30"></Button>
    </StackPanel>

</Window>
